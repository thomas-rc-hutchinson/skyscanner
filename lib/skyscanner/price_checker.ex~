defmodule PriceChecker do
  def main do
    sat = FlightDates.upcoming_saturday(Calendar.Date.today_utc)
    sun = FlightDates.upcoming_sunday(Calendar.Date.today_utc)
    dates = FlightDates.next_n(sat,sun,1)
    country =  "UK"
    from = "STOC-Sky"
    to = "MAN-Sky"
  end

  def main(dates,country,from,to) do
    Enum.map(dates, fn({from,to}) ->
      criteria = [country: "UK",
		  from: "STOC-Sky"
		  to: "MAN-Sky"
		  depart: parse(from)
		  return: parse(to)]
      end)
  end

  def parse(date) do
    "#{date.}-#{}-#{}"
  end

  def str(i), do: Integer.to_string i
      
  
end
